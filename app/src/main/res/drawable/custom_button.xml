<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="3dp"
                android:color="@color/red" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>


